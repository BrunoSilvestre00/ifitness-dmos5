<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <TextView
        android:id="@+id/activity_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="marquee"

        android:text="TYPE"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:ellipsize="marquee"
        android:singleLine="true"

        android:text="00/00/00000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_dist_lbl"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/activity_type"
        android:layout_alignParentLeft="true"

        android:gravity="center_vertical"
        android:text="Distancia: "

        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_dist_data"

        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:layout_below="@id/activity_type"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/activity_dist_lbl"

        android:gravity="center_vertical"
        android:text="xx,xxx Km"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_duration_lbl"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/activity_dist_lbl"

        android:textStyle="bold"
        android:gravity="center_vertical"

        android:text="Duração: "
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/activity_duration_data"

        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:layout_below="@id/activity_dist_lbl"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/activity_duration_lbl"

        android:gravity="center_vertical"
        android:text="xx,x min"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/activity_duration_lbl">

        <Button
            android:id="@+id/btn_edt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="EDITAR"
            android:backgroundTint="#F9D62E"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="EXCLUIR"
            android:backgroundTint="#DD0523"/>

    </LinearLayout>


</RelativeLayout>